<rootWidget>:
    orientation: 'vertical'
    FloatLayout:
        Label:
            id: display
            text: root.textOnScreen
            font_size: 50
            size_hint: 1, 0.2
            pos_hint:{"x": 0, "top": 0.8}
            color: 1,1,1,1
        Button:
            text:"0"
            background_normal: ""
            background_color: 0.3, 0.3, 0.3, 1
            color: 1,1,1,1
            size_hint: 0.245, 0.125
            pos_hint: {"x" : 0, "y" : 0}
            on_press: root.clicked('0')
            on_release: root.displayText(self.text)
